#!/usr/bin/env bash

set -e

# install a dot file in the home
installDotFile() {
  if [ ! -h $HOME/.$1 ]
  then
    ln -s $(PWD)/$1 $HOME/.$1
  fi
}

# install a dot folder in the home
installDotFolder() {
  if [ ! -d $HOME/.$1 ]
  then
    ln -s $(PWD)/$1 $HOME/.$1
  fi
}

# install each of the dot files
for f in gitconfig vimrc tmux.conf zshrc zalias
do
  installDotFile $f
done

installDotFolder vim

